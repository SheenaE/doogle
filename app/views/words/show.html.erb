<div class="container">
  <div class="search_pane">
    <h1>Doogle</h1>

    <%= form_tag words_path, method: 'get', id: 'word_search', remote: true do %>
      <p>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", name: nil, class: 'btn' %>
      </p>
    <% end %>

    <div id="definitions">
      <%= render 'definitions' %>
    </div>
  </div>
</div>
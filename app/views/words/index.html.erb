<h1>Doogle Index</h1>

<%= form_tag words_path, method: 'get', id: 'word_search' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", name: nil %>
  </p>
<% end %>
<% if @definitions %>
  <ul>
    <% for definition in @definitions do %>
      <li>
        <%= definition.content %>
      </li>
    <% end %>
  </ul>
<% end %>
